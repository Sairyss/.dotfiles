// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Colored Zed Icons Theme Dark",
  "tab_bar": {
    "show": true
  },
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "terminal": {
    "dock": "bottom",
    "font_family": "JetBrains Mono",
    "font_size": 14
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "JetBrains Mono",
  "formatter": "prettier",
  "experimental.theme_overrides": {
    "background": "#1e2030",
    "surface.background": "#1e2030",
    "editor.background": "#1e2030",
    "panel.background": "#1e2030",
    // "editor.active_line.background": "#1e2030"
    "editor.active_line.background": "#1e2030",
    "terminal.background": "#1e2030",
    "tab_bar.background": "#1e2030",
    "tab.active_background": "#1e2030",
    "tab.inactive_background": "#1e2030",
    // "title_bar.inactive_background": "#1e2030"
    "toolbar.background": "#1e2030",
    "elevated_surface.background": "#1e2030",
    "status_bar.background": "#1e2030",
    "title_bar.background": "#1e2030",
    "search.match_background": "#2d3f76",
    "editor.gutter.background": "#1e2030",
    "editor.active_line_number": "#4fd6be",
    "players": [
      {
        "cursor": "#4fd6be",
        "background": "#4fd6be",
        "selection": "#2d3f76"
      }
    ]
  }
}
